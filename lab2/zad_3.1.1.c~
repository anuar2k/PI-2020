#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define N1 10
#define N2 20

//utils
void printArr(int[], int);
void swap(int*, int*);
int rand10(void);

//zadania
void reverse(int[], int);
void sort(int[], int);
int one_two(int[], int, int[], int, int[]);

int rand10(void) {
  return (rand() % 10) + 1;
}

int main(void) {
  srand(time(NULL));
    
  int t1[N1];
  int t2[N2];

  for (int i = 0; i < N1; i++) {
    t1[i] = rand10();
  }

  for (int i = 0; i < N2; i++) {
    t2[i] = rand10();
  }

  printArr(t1, N1);
  reverse(t1, N1);
  printArr(t1, N1);
  
  sort(t1, N1);
  printArr(t1, N1);
}

void swap(int *a, int *b) {
  int tmp = *a;
  *a = *b;
  *b = tmp;
}

void reverse(int t[], int size) {
  int half = size / 2;
  for (int i = 0; i < half; i++) {
    swap(&t[i], &t[size - i - 1]);
  }
}

void printArr(int t[], int size) {
  for (int i = 0; i < size; i++) {
    printf("%d ", t[i]);
  }
  printf("\n");
}

void sort(int t[], int size) {
  for (int i = 0; i < size - 1; i++) {
    for (int j = 0; j < size - i - 1; j++) {
      if (t[j] > t[j + 1]) {
	swap(&t[j], &t[j + 1]);
      }
    }
  }
}
